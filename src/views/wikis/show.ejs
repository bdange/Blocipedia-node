<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
        <% include ../static/partials/messages.ejs %>
      <h1><%= wiki.title %></h1>
      <% if(currentUser) { %>
      <a href="/wikis/new" class="btn btn-success">New Wiki</a>
      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
      <form
        style="display:initial"
        action="/wikis/<%= wiki.id %>/destroy"
        method="post"
      >
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>     <% } %>
      <% if(currentUser && (currentUser.id == wiki.userId || currentUser &&
      currentUser.isAdmin())) { %>
      <a href="/wikis/<%= wiki.id %>/collaborators" class="btn btn-info"
        >Edit Collaborators</a
      >
      <% } %>
      <p><%- wiki.body %></p>

      </ul>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>